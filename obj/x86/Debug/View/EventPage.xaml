<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventMaker.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:EventMaker.ViewModel"
    x:Class="EventMaker.View.EventPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.DataContext>
            <ViewModel:EventViewModel/>
        </Grid.DataContext>

        <ListView x:ConnectionId='1' x:Name="listView" HorizontalAlignment="Left" Height="775" Margin="64,86,0,0" VerticalAlignment="Top" Width="794" ItemsSource="{Binding Instance.EventsList, Mode=TwoWay}" SelectedItem="{Binding SelectedEvent, Mode=TwoWay}">
        </ListView>
        <AppBarButton x:ConnectionId='2' x:Name="appBarButton" HorizontalAlignment="Left" Icon="Add" Label="Create Event" Margin="64,923,0,0" VerticalAlignment="Top" Height="98"                           />
        <AppBarButton x:ConnectionId='3' x:Name="appBarButton1" HorizontalAlignment="Left" Icon="Delete" Label="Delete event" Margin="137,923,0,0" VerticalAlignment="Top" Height="98" Width="62" Command="{Binding DeleteEventCommand}"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock" HorizontalAlignment="Left" Margin="1020,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="88" Width="464" Text="{Binding SelectedEvent}"/>

    </Grid>
</Page>

